{
    "name": "ToDoApp",
    "description": "A todo app for busy people but on the Slim Skeleton",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "http://github.com/georginaw/slim3-skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Georgina Watson",
            "email": "gwatson.developer@gmail.com",
            "homepage": "https://github.com/georginaw"
        }
    ],
    "require": {
        "php": ">=5.6",
        "slim/slim": "~3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "~1.17"
    },
    "require-dev": {
        "phpunit/phpunit": ">=5.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "autoload": {
        "psr-4": {
            "ToDoApp\\": "src/classes/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
